<%= form_with(model: product, local: true) do |form| %>
  <% if product.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

      <ul>
      <% product.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, id: :product_name %>
  </div>

  <div class="field">
    <%= form.label :price %>
    <%= form.text_field :price, id: :product_price %>
  </div>

  <% if type=='Pen' %>
    <div class="field">
      <%= form.label :colour %>
      <%= form.text_field :colour, id: :product_colour %>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :status %>
    <%= form.hidden_field :status, value: false %>
    <%= form.check_box :status, id: :product_status, value: true %>
  </div>

  <div class="field">
    <%= form.label :purchase_date %>
    <%= form.text_field :inward_date, id: :product_purchase_date %>
  </div>

  <div class="field">
    <%= form.hidden_field :type, value: type %>
  </div>

  <div class="field">
    <%= form.label :description %>
    <%= form.text_field :description, id: :product_description %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
